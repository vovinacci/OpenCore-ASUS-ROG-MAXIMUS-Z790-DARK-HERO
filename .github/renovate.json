{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":disableRateLimiting",
    ":disableDependencyDashboard",
    ":semanticCommitTypeAll(fix)",
    ":semanticCommitScope(deps)"
  ],
  "includePaths": [
    "build.env"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^build.env$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "[A-Z_]+_VERSION=\"(?<currentValue>.*)\"\\s*# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)?\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "all",
      "matchPackageNames": ["*"],
      "extractVersion": "^v(?<version>.*)$"
    }
  ]
}
